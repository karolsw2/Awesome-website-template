body
	margin 0
	font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"
.menu
	width 100%
	position absolute
	top 0
	height 60px
	display flex
	align-items center
	justify-content space-between
	box-sizing border-box
	padding 18px 23px
	z-index 4
	&__logo
		display flex
		p
			color white
			font-weight 700
			text-transform capitalize
			cursor pointer
			transition-duration .2s
			&:hover
				opacity 0.8
	&__buttons
		display flex
		box-sizing border-box
	&__button
		margin 0 10px
		border 3px solid white
		border-radius 5px
		cursor pointer
		padding 6px 32px
		font-weight 400
		color white
		transition-duration .2s
		&:hover
			background white
			color #333
.header
	position relative
	width 100%
	height 600px
	display flex
	align-items center
	padding-left 70px
	box-sizing border-box
	&__background
		top 0
		left 0
		width 100%
		height 100%
		position absolute
		background linear-gradient(60deg, #27e7ff, #00ca52)
		overflow hidden
		transform skewY(3deg) translateY(-80px)
		z-index -1
		&:after
			content ''
			background url('https://www.transparenttextures.com/patterns/dark-mosaic.png')
			width 100%
			position absolute
			top 0
			right 0
			height 120%
			opacity .24
			animation-name floating
			animation-duration 13s
			animation-iteration-count infinite
	&__title
		color white
		z-index 2
		display inline-block
		h1
			font-size 90px
			font-weight 900
			margin 0
		p
			font-size 20px
			font-weight 400

.container
	width 100%
	padding 20px
	box-sizing border-box
	height 600px
	box-sizing border-box
	display flex
	justify-content left
	align-items center
	&__slot
		position relative
		height 100%
		box-sizing border-box
		width 600px
		padding-right 60px
		display flex
		align-content center
	&__card
		display block
		height 100%
		width 100%
		background-image url('../../images/desktop.jpg')
		background-size cover
		position absolute
		left -100px
		border-radius 13px
		box-shadow inset 0 0 42px rgba(0, 0, 0, 0.3)
		transition-duration .32s
		transition-timing-function ease-in-out
		&:hover
			left -90px
	&__text
		h1
			font-size 40px
			color #333
		p
			color #555

@keyframes rotate
	0%
		transform rotateZ(0deg)
	100%
		transform rotateZ(360deg)

.floating
	animation-name floating
	animation-duration 3s
	animation-iteration-count infinite
	&--slow
		animation-duration 5s
	&--normal
		animation-duration 3s
	&--fast
		animation-duration 2s

@keyframes floating
	0%
		transform translateY(0%)
	50%
		transform translateY(10%)
	100%
		transform translateY(0%)